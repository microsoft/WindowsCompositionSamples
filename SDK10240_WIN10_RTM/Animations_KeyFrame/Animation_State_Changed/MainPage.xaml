    xmlns:local="using:Animation_State_Changed"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:Name="Container" HorizontalAlignment="Left" Height="620" Margin="10,10,0,0" VerticalAlignment="Top" Width="340" Background="#FFCBC9C9">
            <Button x:Name="setup" Content="Setup" HorizontalAlignment="Left" Margin="94,395,0,0" VerticalAlignment="Top" Click="Setup_Click"/>
            <Button x:Name="begin" Content="Begin" HorizontalAlignment="Left" Margin="184,395,0,0" VerticalAlignment="Top" Click="Animate_Click"/>
        </Grid>
    </Grid>
</Page>
